package Coding;

import java.util.Arrays;

// FindTheSecondLargestNumber in an array

public class FindTheSecondLargestNumber {

	public static void main(String[] args) {
		
			int a[]= {8,4,6,2,19,20};
			
			int temp;
			for(int i=0; i<=a.length-1; i++) {
				for(int j=i+1; j<=a.length-1; j++) {
	//				System.out.println(a[i]+"=i"+a[j]+"=j");
					if(a[i] < a[j] ) {
					temp=a[i];
					a[i]=a[j];
					a[j]=temp;
					} 
				}
				if(i==1){   // at the time of i=1 iteration two value will be sort so we dont have to perform complete iteration
					break;
				}
			}
			System.out.println(a[1]);
			
			
			
		
